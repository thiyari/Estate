<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');
    </style>    
    <script>
      var status = '<%- JSON.stringify(status) %>';
      if (JSON.parse(status) == "Verified") {
          alert('password reset is successful, please login')
          window.location.href = "http://localhost:3000/Login";
      }
    </script>
  </head>
  <body>
    <h1 class="mt-4" align="center" style='font-family: "Rajdhani", sans-serif; color: #999999;'>Welcome <%= email%></h1>
  <div class="row">
  <div class="col-md-12">


  <div class="container mt-4" >
    <div class="card" style="box-shadow: 5px 5px 5px rgba(0,0,0,0.3);">
    <h1 class="card-header">
      <center>
        <div class="header-font" style='font-family: "Rajdhani", sans-serif; color: #999999;'>Reset Password</div>
      </center>
    </h1>
			<div class="form-container">
        <div class="card-body">
    <form action="" name="ResetForm" method="post" onsubmit="return formValidation()">
      <div class="row">
      <div class="col-md-12">
      <div class='row'>
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
      
      <div class="form-group">
        <div id="formPassword">
          <label class="form-label" style='font-family: "Rajdhani", sans-serif;'>New Password</label>
          <input 
          type="password"  
          class="form-control mb-3" 
          id="password" 
          placeholder="Enter New Password"
          name="password"
          required/><span class="error" style='color:red; font-family: "Rajdhani", sans-serif;'></span>
        </div>
      </div>


        <div class="form-group">
          <div id="formConfirmPassword">
            <label class="form-label" style='font-family: "Rajdhani", sans-serif;'>Confirm Password</label>
            <input 
            type="password"  
            class="form-control mb-3" 
            id="confirm-password" 
            placeholder="Confirm New Password"
            name="confirm-password" 
            required/><span class="error" style='color:red; font-family: "Rajdhani", sans-serif;'></span>
          </div>
        </div>

        <div align="center">
          <button type="submit" class="btn btn-primary mt-4" value="submit">Submit</button>
        </div>

          </div> 
          </div> 
          <div class="col-sm-4"></div>

        </div>
        </div>
        </form>
      </div>
      </div>

      </div>
      </div>
    </div>
</div>
  </body>
  <script>
    function clearErrors() {
        error = document.getElementsByClassName('error');
        for (let item of error){
            item.innerHTML = '';
        }
    }

    function setErrorMessage(id, ErrorMessage){
        element = document.getElementById(id);
        element.getElementsByClassName("error")[0].innerHTML = ErrorMessage;
    }

    function formValidation(){
        var PWD_REGEX = /(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}/;
        var returnval = true;
        clearErrors();
        var password = document.forms['ResetForm']['password'];
        var password_pattern = PWD_REGEX.test(password.value);
        if (!password_pattern) {
              setErrorMessage('formPassword',
"Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
              );
              password.style.borderColor = 'red';
              returnval = false;
          }

        var confirm_password = document.forms['ResetForm']['confirm-password'];
        if(confirm_password.value != password.value){
            setErrorMessage('formConfirmPassword',"New Password and Confirm password should be the same");
            confirm_password.style.borderColor = 'red';
            returnval = false;
          }
        return returnval;    
      }

  </script>
</html>